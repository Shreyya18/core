int main() {
//   Node* head=new Node(3);
    // cout<<head->val;
    vector<int> arr={1,2,3,1,4};
    Node* head=convertArraytoDLL(arr);
    head=deleteFrontDLL(head);
    head=deleteEndDLL(head);
    // head=deleteAtPos(head, 1);
    traverseDLL(head);
    return 0;
}
