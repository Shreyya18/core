// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
//structure of LinkedList
    struct Node{
        int data;
        Node* next;
        
        Node(int data1, Node* next1){
            data=data1;
            next=next1;
        }
    };
    //Convert an array to a LinkedList
    Node* convertArraytoLL(vector<int>& arr){
        Node* head=new Node(arr[0],NULL);
        Node* mover=head;
        for(int i=1;i<arr.size();i++){
            Node* temp=new Node(arr[i], NULL);
            mover->next=temp;
            mover=mover->next;
        }
        return head;
    }
    //Print the LinkedList
    void printALL(Node* head){
        Node* temp=head;
        while(temp!=NULL){
            cout<<" "<<temp->data;
            temp=temp->next;
        }
    }
    //insert element to the front of LL
    Node* insertFront(Node* head, int val){
        Node* temp=new Node(val, NULL);
        temp->next=head;
        head=temp;
        return head;
    }
    //insert element to the end of LL
    Node* insertEnd(Node* head, int val){
        Node* temp=new Node(val, NULL);
        Node* mover=head;
        while(mover->next!=NULL){
            mover=mover->next;
        }
        mover->next=temp;
    return head;
    }
    //insert element to a given position( i.e pos)
    Node* insertAtPos(Node* head, int pos, int val ){
        Node* temp=new Node(val,NULL);
        int count=0;
        Node* mover=head;
        Node* prev=NULL;
        while(mover!=NULL){
            count++;
            if(count==pos){
                prev->next=temp;
                temp->next=mover;
            }
            prev=mover;
            mover=mover->next;
        }
        return  head;
    }
    //insert element before the value n
    Node* insertBeforeTheValue(Node* head, int val, int n){
        Node* temp=new Node(val,NULL);
        Node* mover=head;
        Node* prev=NULL;
        while(mover!=NULL){
            if(mover->data==n){
                prev->next=temp;
                temp->next=mover;
            }
            prev=mover;
            mover=mover->next;
        }
        return head;
    }
int main() {
    vector<int> arr={1,1,2,3,4};
    Node* head=convertArraytoLL(arr);
    head=insertFront(head, 5);
    head=insertEnd(head, 7);
    head=insertAtPos(head,3,9);
    head=insertBeforeTheValue(head, 6, 2);
    printALL(head);
    return 0;
}
