Given a string s containing only three types of characters: '(', ')' and '*', return true if s is valid.
The following rules define a valid string:
Any left parenthesis '(' must have a corresponding right parenthesis ')'.
Any right parenthesis ')' must have a corresponding left parenthesis '('.
Left parenthesis '(' must go before the corresponding right parenthesis ')'.
'*' could be treated as a single right parenthesis ')' or a single left parenthesis '(' or an empty string "".
 
Example 1:
Input: s = "()"
Output: true

Example 2:
Input: s = "(*)"
Output: true

Example 3:
Input: s = "(*))"
Output: true
------------------------------------------------------------------------------------------------------------------------------
// recursive   tc=O(3^n) sc=O(n) we will get TLE since tc goes upto 3^n
class Solution {
public:
    bool checkValidString(string s) {
        int count=0;
        if(recurse(0, s, count))
            return true;
        return false;
    }

    bool recurse(int idx, string s, int count){
        if(idx==s.size())
            return count==0;
        if(count==-1)
            return false;
        
        if(s[idx]=='(')
            return recurse(idx+1, s, count+1);
        else if(s[idx]==')')
            return recurse(idx+1, s, count-1);
        else{
            return recurse(idx+1, s, count+1)|| recurse(idx+1, s, count-1) || recurse(idx+1, s, count);
        }
  }
};
-----------------------------------------------------------------------------------------------------------------
//linear using two variable  tc=O(n) sc=O(1)
class Solution {
public:
    bool checkValidString(string s) {
         int n=s.size();
    int min=0, max=0;
    for(int i=0;i<n;i++){
        if(s[i]=='('){
            min=min+1;
            max=max+1;
        }
        else if(s[i]==')'){
            min=min-1;
            max=max-1;
        }

        else{
            min=min-1;
            max=max+1;
        }

        if(min<0)
            min=0;
        
        if(max<0)
            return false;
    }
    return min==0;
    }
};
