Given an array arr and target sum k, check whether there exists a subsequence such that the sum of all elements in the subsequence equals the given target sum(k).

Example 1:
Input:  arr = [10,1,2,7,6,1,5], k = 8.
Output:  Yes
Explanation:  Subsequences like [2, 6], [1, 7] sum upto 8

Example 2:
Input:  arr = [2,3,5,7,9], k = 100. 
Output:  No
Explanation:  No subsequence can sum upto 100

Your Task:
You don't need to read or print anything. Your task is to complete the boolean function checkSubsequenceSum() which takes N, arr and K as input
parameter and returns true/false based on the whether any subsequence with sum K could be found.
-------------------------------------------------------------------------------------------------------------------------------------------------------------
//this to check if subsequence exist with sum==k
#include <stdio.h>
#include<bits/stdc++.h>
using namespace std;
class Solution {
  public:
    bool checkSubsequenceSum(int n, vector<int>& arr, int k) {
        // Code here
        vector<int>res;
        int sum=0;
        bool isTrue=false;
        isSubsequence(0, arr, k, res,sum, isTrue);
        return isTrue;
    }
    
    void isSubsequence(int i, vector<int>& arr, int k, vector<int>& res, int& sum, bool& isTrue){
        if(sum==k){
            isTrue=true;
            return;
        }
        if(sum>k)
            return;
            
        if(i==arr.size())
            return;
        
        res.push_back(arr[i]);
        sum=sum+arr[i];
        isSubsequence(i+1, arr, k, res, sum, isTrue);
        
        sum=sum-(res.back());
        res.pop_back();
        isSubsequence(i+1, arr,k,res,sum, isTrue);
    }
};
int main()
{
    Solution s;
    vector<int>arr={10,1,2,7,6,1,5};
    int n=7;
    int k=40;
    cout<<s.checkSubsequenceSum( n, arr,k);
    return 0;
}
-------------------------------------------------------------------------------------------------------------------------------------------------------------
//this is to print the subsequnece if sum==k
#include <stdio.h>
#include<bits/stdc++.h>
using namespace std;
class Solution {
  public:
    vector<vector<int>> checkSubsequenceSum(int n, vector<int>& arr, int k) {
        // Code here
        vector<int>res;
        vector<vector<int>>ans;
        int sum=0;
        bool isTrue=false;
        isSubsequence(0, arr, k, res, ans,sum, isTrue);
        return ans;
    }
    
    void isSubsequence(int i, vector<int>& arr, int k, vector<int>& res, vector<vector<int>>&ans, int& sum, bool& isTrue){
        if(sum==k){
            // isTrue=true;
            ans.push_back(res);
            return;
        }
        // if(sum>k)
        //     return;
        if(i==arr.size())
            return;
        
        res.push_back(arr[i]);
        sum=sum+arr[i];
        isSubsequence(i+1, arr, k, res, ans, sum, isTrue);
        
        sum=sum-(res.back());
        res.pop_back();
        isSubsequence(i+1, arr,k,res, ans,sum, isTrue);
    }
};
int main()
{
    Solution s;
    vector<int>arr={10,1,2,7,6,1,5};
    int n=7;
    int k=8;
    vector<vector<int>>ans=s.checkSubsequenceSum( n, arr,k);
    for(auto &it: ans){
        cout<<"[";
        for(int i:it){
            cout<<i<<" ";
        }
        cout<<"]";
    }
    return 0;
}

